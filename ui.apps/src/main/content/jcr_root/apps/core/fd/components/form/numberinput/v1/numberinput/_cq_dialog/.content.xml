<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Adaptive Form Number Input field"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.forms.components.numberinput.v1.editor]"
    trackingFeature="core-components:adaptiveform-numberinput:v1">
    <content
        granite:class="cmp-adaptiveform-numberinput__editdialog"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs"
                  maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Basic"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <type
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="guideGlobalLazyField"
                                    granite:class="cmp-adaptiveform-numberinput__type"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Type"
                                    emptyText="Select"
                                    name="./type">
                                <items jcr:primaryType="nt:unstructured">
                                    <decimal
                                            jcr:primaryType="nt:unstructured"
                                            text="Decimal"
                                            value="number"/>
                                    <integer
                                            jcr:primaryType="nt:unstructured"
                                            text="Integer"
                                            value="integer"/>
                                </items>
                            </type>
                            <default
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="guideGlobalLazyField"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    defaultValue=""
                                    fieldLabel="Default Value"
                                    name="./default"/>
                            <leadDigits
                                    jcr:primaryType="nt:unstructured"
                                    granite:class="cmp-adaptiveform-numberinput__leaddigits"
                                    sling:orderBefore="guideGlobalLazyField"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    defaultValue=""
                                    fieldLabel="Lead digits">
                            </leadDigits>
                            <fracDigits
                                    jcr:primaryType="nt:unstructured"
                                    granite:class="cmp-adaptiveform-numberinput__fracdigits"
                                    sling:orderBefore="guideGlobalLazyField"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    defaultValue=""
                                    fieldLabel="Frac digits">
                            </fracDigits>
                            <editFormat
                                    jcr:primaryType="nt:unstructured"
                                    granite:class="cmp-adaptiveform-numberinput__editFormat"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    granite:hidden="{Boolean}true"
                                    text="Edit Format"
                                    name="./editFormat">
                            </editFormat>
                            <minimum
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    sling:orderBefore="guideGlobalLazyField"
                                    defaultValue=""
                                    fieldLabel="Minimum Value"
                                    name="./minimum"/>
                            <exclusiveMinimum
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    sling:orderBefore="guideGlobalLazyField"
                                    value="true"
                                    text="Exclude minimum value"
                                    fieldLabel="Exclusive Minimum"
                                    name="./exclusiveMinimum"/>
                            <maximum
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                    sling:orderBefore="guideGlobalLazyField"
                                    defaultValue=""
                                    fieldLabel="Maximum Value"
                                    name="./maximum"/>
                            <exclusiveMaximum
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="guideGlobalLazyField"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    text="Exclude maximum value"
                                    fieldLabel="Exclusive Maximum"
                                    value="true"
                                    name="./exclusiveMaximum"/>
                        </items>
                    </basic>
                    <patterns
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Patterns"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <displayPatternGroup
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Display Pattern"
                                    sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                    title="Display Pattern">
                                <items jcr:primaryType="nt:unstructured">
                                    <displayPatternType
                                            jcr:primaryType="nt:unstructured"
                                            granite:class="cmp-adaptiveform-numberinput__displaypattern"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            fieldLabel="Type"
                                            name="./displayPatternType">
                                        <!-- as soon as formatter pr is merged uncomment datasource -->
                                        <datasource
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="core/fd/components/form/container/v1/datasource"
                                                guideDataModel="basic"
                                                fieldType="number-input"
                                                type="formatters"/>
                                    </displayPatternType>
                                    <displayFormat
                                            jcr:primaryType="nt:unstructured"
                                            granite:class="cmp-adaptiveform-numberinput__displayformat"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Pattern"
                                            name="./displayFormat">
                                    </displayFormat>
                                </items>
                            </displayPatternGroup>
                            <validationPatternGroup
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Validation Pattern"
                                    sling:resourceType="fd/af/authoring/components/granite/form/fieldset"
                                    title="Validation Pattern">
                                <items jcr:primaryType="nt:unstructured">
<!--                                    <sameAsDisplayPattern-->
<!--                                            jcr:primaryType="nt:unstructured"-->
<!--                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"-->
<!--                                            granite:class="cmp-adaptiveform-numberinput__validatesameasdisplaypattern"-->
<!--                                            autoWidth="true"-->
<!--                                            fieldLabel="Same as display pattern"-->
<!--                                            name="./displayIsSameAsValidate"-->
<!--                                            text="Same as display pattern"-->
<!--                                            value="true">-->
<!--                                    </sameAsDisplayPattern>-->
                                    <validationPatternType
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            granite:class="cmp-adaptiveform-numberinput__validationpattern"
                                            fieldLabel="Type"
                                            name="./validationPatternType">
                                        <!-- as soon as formatter pr is merged uncomment datasource -->
<!--                                        <datasource-->
<!--                                                jcr:primaryType="nt:unstructured"-->
<!--                                                sling:resourceType="core/fd/components/form/container/v1/datasource"-->
<!--                                                guideDataModel="basic"-->
<!--                                                fieldType="number-input"-->
<!--                                                type="formatters"/>-->
                                    </validationPatternType>
                                    <validatePictureClause
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            granite:class="cmp-adaptiveform-numberinput__validationpictureclause"
                                            fieldDescription="Regular expression is permitted."
                                            fieldLabel="Pattern"
                                            name="./validatePictureClause">
                                    </validatePictureClause>
                                    <validatePictureClauseMessage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                            fieldLabel="Error message"
                                            name="./validatePictureClauseMessage"/>
                                </items>
                            </validationPatternGroup>
                        </items>
                    </patterns>
                    <help
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Help Content"
                            sling:resourceType="granite/ui/components/coral/foundation/container"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
