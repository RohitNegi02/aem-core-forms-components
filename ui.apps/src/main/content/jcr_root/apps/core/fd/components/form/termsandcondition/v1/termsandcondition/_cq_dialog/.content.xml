<jcr:root 
  xmlns:sling="http://sling.apache.org/jcr/sling/1.0" 
  xmlns:granite="http://www.adobe.com/jcr/granite/1.0" 
  xmlns:cq="http://www.day.com/jcr/cq/1.0" 
  xmlns:jcr="http://www.jcp.org/jcr/1.0" 
  xmlns:nt="http://www.jcp.org/jcr/nt/1.0" 
  jcr:primaryType="nt:unstructured" 
  jcr:title="Terms and Conditions" 
  sling:resourceType="cq/gui/components/authoring/dialog" 
  extraClientlibs="[core.forms.components.termsandcondition.v1.editor]" 
  helpPath="https://www.adobe.com/go/aem_cmp_termsandcondition_v1" 
  trackingFeature="core-components:termsandcondition:v1"
>
  <content 
    jcr:primaryType="nt:unstructured" 
    sling:resourceType="granite/ui/components/coral/foundation/container"
    granite:class="cmp-adaptiveform-termsandcondition__editdialog"
    >
      <items jcr:primaryType="nt:unstructured">
        <tabs 
          jcr:primaryType="nt:unstructured" 
          sling:resourceType="granite/ui/components/coral/foundation/tabs" 
          maximized="{Boolean}true"
          >
            <items jcr:primaryType="nt:unstructured">
              <basic 
                jcr:primaryType="nt:unstructured" 
                jcr:title="Basic" 
                sling:resourceType="granite/ui/components/coral/foundation/container"
                >
                  <items jcr:primaryType="nt:unstructured">
                    <name 
                      jcr:primaryType="nt:unstructured" 
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield" 
                      fieldLabel="Name" 
                      name="./name" 
                      required="{Boolean}true"
                      >
                        <granite:data jcr:primaryType="nt:unstructured" node-name-validation="" />
                    </name>
                    <title 
                      jcr:primaryType="nt:unstructured" 
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield" 
                      fieldLabel="Title" 
                      name="./title" 
                    />
                    <hideTitle 
                      jcr:primaryType="nt:unstructured" 
                      sling:resourceType="granite/ui/components/coral/foundation/form/checkbox" 
                      name="./hideTitle" 
                      text="Hide title" 
                      value="false" 
                    />
                    <showAsLink 
                      jcr:primaryType="nt:unstructured" 
                      sling:resourceType="granite/ui/components/coral/foundation/form/checkbox" 
                      name="./showAsLink" 
                      value="true"
                      text="Show link for terms and conditions" 
                      granite:class="cmp-adaptiveform-termsandcondition__showlink"
                    />
                    <!-- <enum 
                      jcr:primaryType="nt:unstructured" 
                      sling:resourceType="granite/ui/components/coral/foundation/form/multifield" 
                      fieldDescription="Enter display text for link" 
                      fieldLabel="Link Text"
                      wrapperClass="cmp-adaptiveform-termsandcondition__enum"
                    >
                        <field 
                          jcr:primaryType="nt:unstructured" 
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield" 
                          name="./enum" 
                          required="{Boolean}false"
                        />
                    </enum>
                    <enumNames 
                      jcr:primaryType="nt:unstructured" 
                      sling:resourceType="fd/af/authoring/components/granite/form/formsmultifield" 
                      fieldDescription="Enter link url" 
                      fieldLabel="Link"
                      wrapperClass="cmp-adaptiveform-termsandcondition__enumNames"
                    >
                      <field 
                        jcr:primaryType="nt:unstructured" 
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield" 
                        name="./enumNames" 
                        required="{Boolean}false"
                      />
                    </enumNames> -->
                    <granite:data 
                      jcr:primaryType="nt:unstructured" 
                      node-bindref-validation="" 
                      bindref-datamodel="fd.channelcore.dataObjectsTree.getDataModel" 
                    />
                  </items>
              </basic>
              <styletab 
                jcr:primaryType="nt:unstructured" 
                sling:resourceType="granite/ui/components/coral/foundation/include" 
                path="/mnt/overlay/cq/gui/components/authoring/dialog/style/tab_edit/styletab" 
              />
            </items>
        </tabs>
      </items>
  </content>
</jcr:root>