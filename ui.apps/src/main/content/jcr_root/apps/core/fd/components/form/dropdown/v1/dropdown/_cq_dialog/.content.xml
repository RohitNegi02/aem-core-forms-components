<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Adaptive Form Dropdown"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.forms.components.dropdown.v1.editor]"
    trackingFeature="core-components:adaptiveform-dropdown:v1">
    <content
        granite:class="cmp-adaptiveform-dropdown__editdialog"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs"
                  maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Basic"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <saveValueType
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="placeholder"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                    fieldLabel="Save Value Type"
                                    name="./type">
                                <items jcr:primaryType="nt:unstructured">
<!--                                    <empty-->
<!--                                            jcr:primaryType="nt:unstructured"-->
<!--                                            text=""-->
<!--                                            value=""/>-->
                                    <String
                                            jcr:primaryType="nt:unstructured"
                                            text="String"
                                            value="string"/>
                                    <Number
                                            jcr:primaryType="nt:unstructured"
                                            text="Number"
                                            value="number"/>
                                    <Boolean
                                            jcr:primaryType="nt:unstructured"
                                            text="Boolean"
                                            value="boolean"/>
                                </items>
                            </saveValueType>
                            <enum
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="placeholder"
                                    sling:resourceType="fd/af/authoring/components/granite/form/formsmultifield"
                                    fieldDescription="Enter Save Value - Enums"
                                    fieldLabel="Save Values - Enums">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        name="./enum"
                                        required="{Boolean}false"/>
                            </enum>
                            <enumNames
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="placeholder"
                                    sling:resourceType="fd/af/authoring/components/granite/form/formsmultifield"
                                    fieldDescription="Enter Display Values (EnumNames) corresponding to their respective Save values"
                                    fieldLabel="Display Values - EnumNames">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        name="./enumNames"
                                        required="{Boolean}false"/>
                            </enumNames>
                            <multiSelect
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="visible"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    name="./multiSelect"
                                    text="Allows multiple selection"
                                    value="true"/>
                            <defaultValue
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="visible"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Must be one of the options."
                                    fieldLabel="Default Value"
                                    name="./default"/>
                            <multiValuePath
                                    jcr:primaryType="nt:unstructured"
                                    sling:orderBefore="visible"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Items Load Path"
                                    name="./optionsLoadPath"/>
                        </items>
                    </basic>
                    <help
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Help Content"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured"/>
                    </help>
                    <accessibility
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Accessibility"
                            sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured"/>
                    </accessibility>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
