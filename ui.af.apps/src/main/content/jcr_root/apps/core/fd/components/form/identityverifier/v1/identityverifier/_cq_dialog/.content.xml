<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Adaptive Form Indentity Verifier field"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.forms.components.identityverifier.v1.editor]"
    helpPath="https://www.adobe.com/go/aem_af_cmp_textinput_v1"
    trackingFeature="core-components:adaptiveform-identityverifier:v1">
    <content
        granite:class="cmp-adaptiveform-textinput__editdialog"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs"
                  maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <accessibility jcr:primaryType="nt:unstructured"
                                   jcr:title="Identity Provider"
                                   sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <identityProvider
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:orderBefore="customText"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    granite:class="cmp-adaptiveform-checkboxgroup__assistprioritycustom"
                                                    fieldLabel="Identity Provider"
                                                    name="./identityProvider"
                                                    value="">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <empty
                                                            jcr:primaryType="nt:unstructured"
                                                            text=""
                                                            value=""/>
                                                    <aadhar
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Aadhar"
                                                            value="aadhar"/>
                                                    <ssn
                                                            jcr:primaryType="nt:unstructured"
                                                            text="SSN"
                                                            value="ssn"/>
                                                </items>
                                            </identityProvider>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </accessibility>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
